{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
      "simple": {
          "format": "%(asctime)s [%(levelname)s] %(name)s:%(lineno)s : %(message)s"
      }
  },

  "handlers": {
      "consoleHandler": {
          "class": "logging.StreamHandler",
          "level": "INFO",
          "formatter": "simple",
          "stream": "ext://sys.stdout"
      },
      "fileHandler": {
          "class": "logging.handlers.TimedRotatingFileHandler",
          "level": "INFO",
          "formatter": "simple",
          "filename": "logs/app.log",
          "encoding": "UTF-8",
          "when": "D"
      }
  },

  "loggers": {
      "__main__": {
          "level": "INFO",
          "handlers": ["consoleHandler", "fileHandler"],
          "propagate": false
      },
      "same_hierarchy": {
          "level": "INFO",
          "handlers": ["consoleHandler", "fileHandler"],
          "propagate": false
      },
      "lower.sub": {
          "level": "INFO",
          "handlers": ["consoleHandler", "fileHandler"],
          "propagate": false
      }
  },

  "root": {
      "level": "INFO",
      "handlers": [
          "consoleHandler",
          "fileHandler"
      ]
  }
}